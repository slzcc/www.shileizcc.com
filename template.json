{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "{{ MetadataName }}",
    "namespace": "{{ MetadataNamespace }}",
    "labels": {
      "app": "{{ AppName }}",
      "cheese": "{{ MetadataVersion }}"
    }
  },
  "spec": {
    "replicas": "{{ SpecReplicas }}",
    "selector": {
      "matchLabels": {
        "app": "{{ AppName }}",
        "task": "{{ ServiceNames }}"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "{{ ServicesNames }}",
          "version": "{{ SpecTemplateMetadataLabelsVersion }}"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "{{ ServiceNames }}",
            "image": "{{ ContainerImage }}",
            "resources": {
              "requests": {
                "cpu": "{{ CPU }}",
                "memory": "{{ MEM }}"
              }
            },
            "ports": [
              { 
                "name": "{{ PortsName }}",
                "containerPort": "{{ PortsEndpoint }}"
              }
            ],
            "securityContext": {
              "runAsNonRoot": true,
              "runAsUser": 10001,
              "capabilities": {
                "drop": [
                  "all"
                ]
              },
              "readOnlyRootFilesystem": true
            },
            "env":{
              "name": "TZ",
              "value": "Asia/Shanghai"
            }
          }
        ]
      }
    }
  }
}
